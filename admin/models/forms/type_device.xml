<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_pro_critical/models/rules"
	addfieldpath="/administrator/components/com_pro_critical/models/fields"
>
	<fieldset name="details">
		<!-- [Fields 492] Default Fields. -->
		<!-- [Fields 493] Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- [Fields 509] Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_CREATED_DATE_LABEL"
			description="COM_PRO_CRITICAL_TYPE_DEVICE_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- [Fields 529] User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_CREATED_BY_LABEL"
			description="COM_PRO_CRITICAL_TYPE_DEVICE_CREATED_BY_DESC"
		/>
		<!-- [Fields 546] Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- [Fields 569] Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_MODIFIED_DATE_LABEL" description="COM_PRO_CRITICAL_TYPE_DEVICE_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- [Fields 579] User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_MODIFIED_BY_LABEL"
			description="COM_PRO_CRITICAL_TYPE_DEVICE_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 611] Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- [Fields 632] Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_VERSION_LABEL"
			description="COM_PRO_CRITICAL_TYPE_DEVICE_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 683] Dynamic Fields. -->
		<!-- [Fields 1465] Type_device Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="type_device"
			label="COM_PRO_CRITICAL_TYPE_DEVICE_TYPE_DEVICE_LABEL"
			maxlength="50"
			default=""
			description="COM_PRO_CRITICAL_TYPE_DEVICE_TYPE_DEVICE_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			message="COM_PRO_CRITICAL_TYPE_DEVICE_TYPE_DEVICE_MESSAGE"
			hint="COM_PRO_CRITICAL_TYPE_DEVICE_TYPE_DEVICE_HINT"
			autocomplete="on"
		/>
	</fieldset>
	
	<!-- [Interpretation 12352] Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- [Interpretation 12354] Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- [Interpretation 12360] Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this type_device"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_pro_critical"
			section="type_device"
		/>
	</fieldset>
</form>