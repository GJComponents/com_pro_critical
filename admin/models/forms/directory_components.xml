<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_pro_critical/models/rules"
	addfieldpath="/administrator/components/com_pro_critical/models/fields"
>
	<fieldset name="details">
		<!-- [Fields 621] Default Fields. -->
		<!-- [Fields 623] Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- [Fields 642] Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_CREATED_DATE_LABEL"
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- [Fields 665] User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_CREATED_BY_LABEL"
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_CREATED_BY_DESC"
		/>
		<!-- [Fields 685] Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- [Fields 712] Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_MODIFIED_DATE_LABEL" description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- [Fields 727] User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_MODIFIED_BY_LABEL"
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 768] Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- [Fields 791] Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VERSION_LABEL"
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- [Fields 854] Dynamic Fields. -->
		<!-- [Fields 1922] Copmonent_name Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="copmonent_name"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_COPMONENT_NAME_LABEL"
			maxlength="64"
			default=""
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_COPMONENT_NAME_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			validate="uniquefieldcomponents"
			message="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_COPMONENT_NAME_MESSAGE"
			hint="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_COPMONENT_NAME_HINT"
			autocomplete="off"
		/>
		<!-- [Fields 1922] Value_option Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="value_option"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VALUE_OPTION_LABEL"
			maxlength="255"
			default=""
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VALUE_OPTION_DESCRIPTION"
			class="text_area"
			readonly="true"
			disabled="false"
			required="true"
			filter="STRING"
			validate="uniquefieldcomponents"
			message="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VALUE_OPTION_MESSAGE"
			hint="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_VALUE_OPTION_HINT"
			autocomplete="off"
		/>
		<!-- [Fields 1922] Extension_id Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="extension_id"
			label="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_EXTENSION_ID_LABEL"
			maxlength="255"
			default=""
			description="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_EXTENSION_ID_DESCRIPTION"
			class="text_area"
			readonly="true"
			disabled="false"
			required="false"
			filter="STRING"
			message="COM_PRO_CRITICAL_DIRECTORY_COMPONENTS_EXTENSION_ID_MESSAGE"
			autocomplete="off"
		/>
	</fieldset>
	
	<!-- [Interpretation 18855] Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- [Interpretation 18860] Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- [Interpretation 18868] Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this directory_components"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_pro_critical"
			section="directory_components"
		/>
	</fieldset>
</form>